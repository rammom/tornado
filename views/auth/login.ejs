<!DOCTYPE html>
<html>

    <head>
        <title>Tornado</title>
        <%- include('../partials/imports')%>
    </head>

    <body class="dev_scribble_text">

        <%- include('../partials/header') %>

		<div class="row dev_contain dev_center">
            <div class="col-12">
                <% if(errors) {%>
                    <% errors.forEach(function(err){%>
                        <p style="color: red">***<%= err.msg %>***</p>
                    <%})%>
                <% }%>
                <form action="/auth/login" method="POST" class="align-middle">
                        <div>
                            <label for="email" class="dev_label_text">Enter your email: </label><br>
                            <input type="email" id="email" name="email" class="form-control dev_input_text dev_center" required>
                        </div>
                        <br>
                        <div>
                            <label for="password" class="dev_label_text">And your password: </label><br>
                            <input type="password" name="password" class="form-control dev_input_text dev_center" required>
                        </div>
                        <br>
                        <button type="submit" class="btn btn-primary dev_med_button">Login</button><br>
                        <a href="/" class="btn btn-secondary dev_med_button">Go back</a>
                </form>
            </div>
        </div>

        
    </body>

</html>